<script>
			var obj = {};
			obj.dataType = "JSON";
			
			obj.error = function(e) {
				console.log(e)
			};
			
			$(document).ready(function() {
				listPrint();
			});
	      
			function listPrint() {
				obj.url = "./reviewList";
				obj.data = {};
				obj.success = function(data) {
					console.log(data);
					var content = "";
					data.reviewList.forEach(function(item, index) {
						  content += "<tr>";
				          content += "<td>"+item.mem_id+"</td>";
				          content += "<td>"+item.sreply_content+"</td>";
				          var date = new Date(item.sreply_date);
				          content +="<td>"+date.toLocaleDateString("ko-KR")+"</td>";
				          content += "<td>"+item.sreply_star+"</td>";
				          content += "</tr>";
						});

				$("#myReview").empty();
				$("#myReview").append(content);
				}				
					
          		ajaxCall(obj);
				}
	      
				/* $("#revwri").click(function() {
